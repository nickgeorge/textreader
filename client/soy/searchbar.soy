{namespace searchbar.templates}

/**
 * @param books All books.
 * @param initialBookId Initial bookId.
 * @param initialWord Initial word.
 */
{template .main}
  <div id="search-bar">
    <select id="search-bar-book-select">
      {foreach $bookId in keys($books)}
        {let $book: $books[$bookId] /}
        {let $selected: $initialBookId == $book.id ? 'selected' : '' /}
        <option value="{$book.id}" {$selected}>{$book.title}</option>
      {/foreach}
    </select>
    <input  id="search-bar-word-input" type='text' value='{$initialWord}'></input>
    <button id="search-bar-button">Search</button>
  </div>
{/template}
